<launch>
<node pkg="nodelet" type="nodelet"
      args="standalone image_proc/crop_decimate"
      name="my_decimator">
  <param name="x_offset" type="int" value="200" />
  <param name="y_offset" type="int" value="1" />
  <param name="width" type="int" value="600" />
  <param name="height" type="int" value="600" />

  <!-- remap input topics -->
  <remap from="camera/image_raw" to="/bebop/image_raw"/>
  <remap from="camera/image_info" to="/bebop/camera_info"/>

  <!-- remap output topics -->
  <remap from="camera_out/image_raw" to="/camera_crop/image_crop"/>
  <remap from="camera_out/image_info" to="/camera_crop/camera_info"/>
</node>
</launch>
